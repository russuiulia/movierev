@model IEnumerable<movierev.Models.Movie>

@{
    ViewBag.Title = "My movies";
}
@Styles.Render("~/Content/MovieIndex.css")

<section id="hero" class="d-flex align-items-center justify-content-center" style='background-image: url("/Content/assets/img/hero-bg.jpg");'>
    <div class="container" data-aos="fade-up">

        <h1 class="mb-5">@ViewBag.Title<span>.</span></h1>
     
            <div class="row">
                <div class="col-md-8 mx-auto" style="color:white;font-size:16px">


                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>

                    <div class="row">

                        @foreach (var item in Model)
                        {
                            <div class="card" style="width: 32%;margin:4px">
                                <img class="card-img-top" style="height: 140px;" src=@Html.DisplayFor(modelItem => item.Image) alt="Card image cap">
                                <div class="card-body">
                                    <h3 class="card-title">@Html.DisplayFor(modelItem => item.Title) (@Html.DisplayFor(modelItem => item.ReleaseYear))</h3>
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Duration) min</h5>
                                    <p class="card-text">  @Html.DisplayFor(modelItem => item.Description)</p>
                                    <h3 class="card-title">@Html.DisplayFor(modelItem => item.Rating) / 5</h3>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </div>
                            </div>

                        }

                        </div>


                    </div>
                </div>
        </div>
</section>